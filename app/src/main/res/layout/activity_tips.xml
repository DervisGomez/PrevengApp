<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/colorWhiter"
    tools:context="org.app.prevengapp.TipsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="8dp"
                android:src="@drawable/logo_principal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:text="¿Qué debes hacer en caso de...?"/>

            <Button
                android:id="@+id/btnTIpsDeslizamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhiter"
                android:textColor="@color/colorAccent"
                android:text="Deslizamientos"/>
            <Button
                android:id="@+id/btnTIpsIncendio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhiter"
                android:textColor="@color/colorAccent"
                android:text="Incendios"/>
            <Button
                android:id="@+id/btnTIpsInundacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhiter"
                android:textColor="@color/colorAccent"
                android:text="Inundaciones"/>
            <Button
                android:id="@+id/btnTIpsSismo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhiter"
                android:textColor="@color/colorAccent"
                android:text="Sismos"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
